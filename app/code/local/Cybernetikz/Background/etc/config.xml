<?xml version="1.0"?>
<config>
    <modules>
        <Cybernetikz_Background>
            <version>0.2.0</version>
        </Cybernetikz_Background>
    </modules>
    
    <global>
        <models>
            <background>
                <class>Cybernetikz_Background_Model</class>
                <resourceModel>background_mysql4</resourceModel>
            </background>
            <background_mysql4>
                <class>Cybernetikz_Background_Model_Mysql4</class>
				<entities>
                    <background>
                        <table>background_uploader</table>
                    </background>
                </entities>
            </background_mysql4>
        </models>
        <blocks>
            <background>
                <class>Cybernetikz_Background_Block</class>
            </background>
        </blocks>
        <helpers>
            <background>
                <class>Cybernetikz_Background_Helper</class>
            </background>  
        </helpers>
		<resources>
            <background_setup>
                <setup>
                    <module>Cybernetikz_Background</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </background_setup>
            <background_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </background_write>
            <background_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </background_read>
        </resources>
    </global>
    
    <admin>
        <routers>
            <background>
                <use>admin</use>
                <args>
                    <module>Cybernetikz_Background</module>
                    <frontName>background</frontName>
                </args>
            </background>
        </routers>
    </admin>
    
	<frontend>
        <layout>
            <updates>
                <background>
                    <file>background.xml</file>
                </background>
            </updates>
        </layout>
    </frontend>
	
    <adminhtml>
        <translate>
            <modules>
                <mage_adminhtml>
                    <files>
                        <background>Cybernetikz_Background.csv</background>
                    </files>
                </mage_adminhtml>
            </modules>
        </translate>
        
        <menu>
            <cms>
                <children>
                    <background_adminform translate="title" module="background">
                        <title>Manage Background</title>
						<sort_order>106</sort_order>
                        <action>background/adminhtml_myform/pagemanage</action>
                    </background_adminform>
                </children>
            </cms>
        </menu>
        
        <acl>
            <resources>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <background_adminform>
                                    <title>Manage Background</title>
                                </background_adminform>
                            </children>
                        </cms>
                    </children>
                </admin>
            </resources>
        </acl>
        
        <layout>
            <updates>
                <background>
                    <file>background.xml</file>
                </background>
            </updates>
        </layout>
    </adminhtml>
</config>